<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="MailSignerJPA" transaction-type="RESOURCE_LOCAL">
		<class>com.mailsigner.model.persistence.Computer</class>
		<class>com.mailsigner.model.persistence.ComputerPK</class>
		<class>com.mailsigner.model.persistence.Field</class>
		<class>com.mailsigner.model.persistence.Signature</class>
		<class>com.mailsigner.model.persistence.User</class>
		<class>com.mailsigner.model.persistence.Userfield</class>
		<class>com.mailsigner.model.persistence.UserfieldPK</class>
		<class>com.mailsigner.model.persistence.Usersignature</class>
		<class>com.mailsigner.model.persistence.UsersignaturePK</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/mailsignerdb"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
			<property name="javax.persistence.jdbc.user" value="SA"/>
			<property name="eclipselink.query-results-cache" value="false"/>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
